{
  "name": "corteza-corredor-sdk",
  "description": "Provides boilerplate for testing, linting, ...",
  "version": "2019.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "contributors": [
    "Toma≈æ Jerman <tomaz.jerman@gmail.com>"
  ],
  "private": true,
  "scripts": {
    "lint": "eslint ./ --ext .js,.ts",
    "test:unit": "mocha src/**/*.test.ts",
    "test:unit:cc": "nyc mocha src/**/*.test.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "chai": "^4.2.0",
    "corteza-webapp-common": "cortezaproject/corteza-webapp-common.git#master",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "flush-promises": "^1.0.2",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.4.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "require": [
      "ts-node/register"
    ],
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "statements": 90,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src/**/*.ts"
    ]
  }
}
